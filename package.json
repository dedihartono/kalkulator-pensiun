{
  "name": "pension-calculator",
  "version": "1.0.0",
  "description": "Kalkulator Dana Pensiun",
  "main": "src/server.js",
  "scripts": {
    "build": "npx tailwindcss -i ./src/styles/global.css -o ./public/global.css --watch",
    "start": "node src/server.js",
    "dev:tailwind": "npx tailwindcss -i ./src/styles/global.css -o ./public/global.css --watch",
    "dev:server": "nodemon src/server.js",
    "dev": "concurrently \"npm run dev:tailwind\" \"npm run dev:server\""
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "tailwindcss": "^3.4.7"
  }
}
